<h1>Créer un gossip</h1>

<%= form_for @gossip do |f| %>

  <div class="form-group">
    <label>Titre du gossip</label>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>Contenu du gossip</label>
    <%= f.text_area :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.collection_select :user_id, User.order(:first_name), :id, :first_name %>
  </div>

  <div class="form-group">
    <button type="submit">Créer le gossip</button>
  </div>
<% end %>
